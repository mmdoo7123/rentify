<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoleSelectionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Title for Login -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/my_secondary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <!-- Spacer -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="24dp" />

        <!-- Text for Select Profile -->
        <TextView
            android:id="@+id/roleSelectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Profile Type"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:alpha="0.7" />

        <!-- Spacer -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <!-- Renter Button -->
        <Button
            android:id="@+id/buttonSelectRenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/my_secondary"
            android:text="Renter"
            android:textColor="@android:color/white"
            android:padding="16dp" />

        <!-- Lessor Button -->
        <Button
            android:id="@+id/buttonSelectLessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/my_secondary"
            android:text="Lessor"
            android:textColor="@android:color/white"
            android:padding="16dp" />

        <!-- Admin Button -->
        <Button
            android:id="@+id/buttonSelectAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/my_secondary"
            android:text="Admin"
            android:textColor="@android:color/white"
            android:padding="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
